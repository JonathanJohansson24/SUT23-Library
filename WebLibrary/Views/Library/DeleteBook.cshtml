@model BookDTO


<h1>Delete a Book</h1>


<div>
    <form asp-action="DeleteBook" method="post">
        <div class="container border p-3">
            <hr />
            <div class="row">

                <div class="col-2">
                    <label asp-for="Title" class="control-label pt-2" style="font-size:20px"></label>
                </div>

                <div class="col-10 pb-3">
                    <input asp-for="Title" disabled class="form-control" />
                </div>

                <div class="col-2">
                    <label asp-for="Author" class="control-label pt-2" style="font-size:20px"></label>
                </div>

                <div class="col-10 pb-3">
                    <input asp-for="Author" disabled class="form-control" />
                </div>

                <div class="col-2">
                    <label asp-for="IsAvailable" class="control-label pt-2" style="font-size:20px"></label>
                </div>

                <div class="col-10 pb-3">
                    <input asp-for="IsAvailable" disabled class="form-control" />
                </div>

                <div class="col-2">
                    <label asp-for="PublicationYear" class="control-label pt-2" style="font-size:20px"></label>
                </div>

                <div class="col-10 pb-3">
                    <input asp-for="PublicationYear" disabled class="form-control" />
                </div>

                <div class="col-5">
                    <input type="hidden" asp-for="BookID" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index">Back to list</a>
                </div>

            </div>
        </div>
    </form>
</div>