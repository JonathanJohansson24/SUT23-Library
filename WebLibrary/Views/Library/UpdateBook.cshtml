@model BookDTO


<h1>Update a Book</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateBook" method="post">
            <input type="hidden" asp-for="BookID" />

            <div class="form-group">
                <label asp-for="Title" class="control-group"></label>
                <input asp-for="Title" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Author" class="control-group"></label>
                <input asp-for="Author" class="form-control" />
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvailable" />@Html.DisplayNameFor(model => model.IsAvailable)
                </label>
            </div>

            <div class="form-group">
                <label asp-for="PublicationYear" class="control-group"></label>
                <input asp-for="PublicationYear" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Write a short description for the book.."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">

                <input type="submit" value="save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back To List</a>
</div>